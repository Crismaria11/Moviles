<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Mis Contactos"
            android:layout_width="179dp"
            android:layout_height="44dp"
            android:id="@+id/textMisContactos" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="103dp" android:layout_marginStart="103dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/listContactos"/>
    <ListView
            android:layout_width="368dp"
            android:layout_height="230dp"
            android:id="@+id/listContactos" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonAddContactos"/>
    <Button
            android:text="Agregar contactos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAddContactos" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="105dp" android:layout_marginStart="105dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="109dp"/>
</android.support.constraint.ConstraintLayout>