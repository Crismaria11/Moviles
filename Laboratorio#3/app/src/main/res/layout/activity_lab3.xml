<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lab3">

    <TextView
            android:text="Mis Contactos"
            android:layout_width="173dp"
            android:layout_height="41dp"
            android:id="@+id/tituloContactos" android:textSize="30sp"
            android:layout_marginBottom="35dp" app:layout_constraintBottom_toTopOf="@+id/listContactos"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="106dp"
            android:layout_marginStart="106dp"/>
    <ListView
            android:layout_width="368dp"
            android:layout_height="259dp"
            android:id="@+id/listContactos" android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/addContactos" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="Agregar Contactos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addContactos"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="86dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="105dp"
            android:layout_marginStart="105dp"/>
</android.support.constraint.ConstraintLayout>